                        <!-- /.card -->

                        <!-- About Me Box -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">About Me</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <strong ng-if="(data.UserTypeID)==3"><i class="fas fa-book mr-1"></i> Education</strong>
                                <strong ng-if="(data.UserTypeID)==2"><i class="fas fa-book mr-1"></i>
                                    Qualification</strong>
                                <p class="text-muted" ng-if="(data.UserTypeID)==2">
                                    {{PersonalData.Qualification}} In {{PersonalData.Stream}}
                                </p>
                                <p class="text-muted" ng-if="(data.UserTypeID)==3">
                                    {{PersonalData.Education}} From {{PersonalData.College}}
                                </p>
                                <hr>

                                <strong><i class="fas fa-map-marker-alt mr-1"></i> Location</strong>

                                <p class="text-muted">{{PersonalData.Location}}</p>

                                <hr>

                                <strong><i class="fas fa-pencil-alt mr-1"></i> Skills</strong>

                                <p class="text-muted">
                                    <!--<span class="tag tag-danger">UI Design</span>-->
                                    <!--<span class="tag tag-success">Coding</span>-->
                                    <!--<span class="tag tag-info">Javascript</span>-->
                                    <!--<span class="tag tag-warning">PHP</span>-->
                                    <!--<span class="tag tag-primary">Node.js</span>-->
