                                    <div id="edit" ng-controller="myCtrl">
                                        <input type="file" file-model="myFile"/>
                                        <button class="btn btn-primary" ng-click="uploadFile()">Upload File</button>
                                    </div>

                                </div>

                                <!--<table>-->
