<body class="hold-transition sidebar-mini layout-navbar-fixed" ng-app="editProfile"
      ng-controller="editProfileCtrlr"
      ng-init="initController('<%- UserID %>','<%- FullName %>','<%- UserTypeID %>','<%- EmailID %>')" ng-cloak>
