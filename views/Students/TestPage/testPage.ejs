                <div class="form-group col-12" ng-show="test_box">
                    <form name="test-form">
                        <div class="row">
                            <div class="col-7">
                                <h2 class="text-bold text-left" style="font-family: 'Times New Roman'">
                                    Q. {{test.Question}}</h2>
                            </div>
                            <div class="col-5 text-right">
                                <h4 class="text-bold" style="font-family: 'Times New Roman'">Time for Question :
                                    {{Counter}} Seconds</h4>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-12">
                                <h5 class="text-bold" style="font-family: 'Times New Roman'">OPTIONS</h5>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-6">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <input type="radio" ng-model="selectedOption.option" value="op1" name="u_a" style="font-weight: 300">
                                </span>
                                    </div>
                                    <input type="text" class="form-control" readonly style="font-size: x-large"
                                           value="{{test.op1}}">
                                </div>
                            </div>

                            <div class="col-6">
                                <div class="input-group">
                                    <div class="input-group-prepend">
